# Server Configuration
MOLOCK_PORT=8080
MOLOCK_WORKERS=4
MOLOCK_HOST=0.0.0.0
MOLOCK_CONFIG_PATH=config/molock-config.yaml

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=molock
OTEL_EXPORTER_OTLP_PROTOCOL=grpc
OTEL_RESOURCE_ATTRIBUTES=service.version=0.1.0,deployment.environment=development

# Logging Configuration
RUST_LOG=info,molock=debug
RUST_LOG_FORMAT=json

# Application Features
MOLOCK_ENABLE_HOT_RELOAD=false
MOLOCK_ENABLE_METRICS=true
MOLOCK_ENABLE_HEALTH=true

# Security
MOLOCK_ALLOWED_ORIGINS=*
MOLOCK_MAX_REQUEST_SIZE=10485760  # 10MB

# Performance
MOLOCK_CONNECTION_TIMEOUT=30
MOLOCK_KEEP_ALIVE=75